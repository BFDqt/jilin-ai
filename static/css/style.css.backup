/* ===================== TOC 现代悬浮目录样式 ===================== */
.toc-container {
  position: -webkit-sticky;
  position: sticky;
  top: 100px;
  right: 40px;
  width: 240px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 8px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(59, 130, 246, 0.1);
  padding: 1rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.5s;
  z-index: 100;
  max-height: 70vh;
  overflow-y: auto;
  align-self: flex-start;
}
.toc-container.fade-in {
  opacity: 1;
  pointer-events: auto;
}
.toc-container ul {
  margin: 0;
  padding: 0;
  list-style: none;
}
.toc-container li {
  margin: 4px 0;
  list-style: none;
}
.toc-container a {
  display: block;
  padding: 4px 8px;
  color: #333;
  text-decoration: none;
  border-radius: 4px;
  transition: background 0.2s, color 0.3s ease;
}
.toc-container a:hover {
  background: #f5f5f5;
  color: #4a90e2;
}
.toc-container .active > a,
.toc-container li.active > a {
  color: #1976d2;
  font-weight: bold;
  border-left: 3px solid #1976d2;
  background: #f0f7ff;
}
.toc-container ul ul {
  margin-left: 18px;
  border-left: 1px dashed #eee;
  padding-left: 10px;
  display: none;
}
.toc-container li.active > ul {
  display: block;
}
.toc-container li ul {
  padding-left: 20px;
  margin-top: 5px;
}
.toc-container li ul li {
  margin-bottom: 5px;
  font-size: 0.9em;
}
@media (max-width: 1200px) {
  .toc-container {
    right: 10px;
    width: 180px;
  }
}
@media (max-width: 992px) {
  .toc-container {
    display: none;
  }
}

